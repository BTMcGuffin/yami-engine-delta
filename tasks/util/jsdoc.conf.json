{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./src/"
        ],
        "exclude": [
            "./src/framework.js"
        ],
        "excludePattern": ".*[Ss]pec\\.js"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : false
        },
        "systemName"    : "Delta Engine",
        "footer"        : "Made with ♥ by <a href='http://yami.moe'>Dr.Yami</a>",
        "copyright"     : "Delta Engine Copyright © 2015 Cuong Nguyen.",
        "linenums"      : true,
        "collapseSymbols": false
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : true
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : false,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/jaguarjs-jsdoc"
    }
}